---
export interface Props {
  title?: string;
  description?: string;
}
import "../styles/main.scss";

const navLinks = [
  { name: "Home", href: "/" },
  { name: "About Us", href: "/about" },
  { name: "Dance Studio", href: "/studio" },
  { name: "Events", href: "/events" },
  { name: "Tattoo Studio", href: "/tattoo" },
  { name: "Gallery", href: "/gallery" },
  { name: "Testimonials", href: "/testimonials" },
];

const {
  title,
  description = "Lead and Follow India | Best Dance School in India",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;500;600;700&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script
      is:inline
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <title>{title}</title>
  </head>
  <body>
    <nav class="navbar" id="navbar">
      <div class="container">
        <a href="/" class="navbar__logo"> Lead and Follow </a>

        <ul class="navbar__menu" id="navMenu">
          {
            navLinks.map((link) => (
              <li>
                <a class="navbar__link" href={link.href}>
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>

        <div class="navbar__cta">
          <a href="/contact" class="btn btn--enhanced btn--medium btn--shimmer"
            >Contact Us</a
          >
        </div>

        <button
          class="navbar__hamburger"
          id="hamburger"
          aria-label="Toggle menu"
        >
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </nav>

    <div id="overlay"></div>

    <main>
      <div class="madeby">
        Made with ❤️ by <a href="https://aayanshaikh.com">Aayan</a>
      </div>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__grid">
          <div class="footer__column">
            <h3>About</h3>
            <p>
              Lead & Follow India is a multi-discipline studio offering dance
              classes, fitness programs, kids training, and a professional
              tattoo space — all under one roof. Founded by national-level
              dancers and creators, our studio is home to real learning, real
              growth, and real community.
            </p>
            <a href="/about" class="btn btn--enhanced">Learn More</a>
          </div>

          <div class="footer__column">
            <h3>Links</h3>
            <ul>
              {
                navLinks.map((link) => (
                  <li>
                    <a href={link.href}>{link.name}</a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="footer__column">
            <h3>Services</h3>
            <ul>
              <li><a href="#">Web Design</a></li>
              <li><a href="#">Development</a></li>
              <li><a href="#">Consulting</a></li>
            </ul>
          </div>

          <div class="footer__column">
            <h3>Contact</h3>
            <ul>
              <li><a href="mailto:hello@example.com">hello@example.com</a></li>
              <li><a href="tel:+1234567890">+1 (234) 567-890</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
    <script>
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>

    <script>
      const navbar = document.getElementById("navbar");
      const hamburger = document.getElementById("hamburger");
      const navMenu = document.getElementById("navMenu");
      const overlay = document.getElementById("overlay");

      hamburger?.addEventListener("click", () => {
        hamburger.classList.toggle("active");
        navMenu.classList.toggle("active");
        overlay.classList.toggle("active");
      });

      overlay?.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
        overlay.classList.remove("active");
      });

      window.addEventListener("scroll", () => {
        navbar.classList.toggle("scrolled", window.scrollY > 50);
      });
    </script>
  </body>
</html>
<style lang="scss">
  .madeby {
    color: white;

    a {
      text-decoration: underline;
      color: inherit;
    }

    user-select: none;
    mix-blend-mode: luminosity;

    z-index: 1;
    text-transform: capitalize;
    position: fixed;
    bottom: 40px;
    right: 30px;
    padding: 0.5rem 1rem;
    background: rgba($color: grey, $alpha: 0.1);
    backdrop-filter: blur(15px);
    border-radius: 20px;
    outline: 1px solid rgba($color: grey, $alpha: 0.2);

    @media (max-width: 1024px) {
      left: 50%;
      right: auto;
      width: max-content;
      /* Important: Override the default 'right' property */
      transform: translateX(-50%);
    }
  }
</style>
