---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/pages/contact.scss";
---

<BaseLayout>
  <main>
    <h1>Contact Us</h1>
    <div class="contact-icons">
      <a class="whatsapp" href="wa.me/919958355953"
        ><img
          src="https://img.icons8.com/?size=100&id=QkXeKixybttw&format=png&color=000000"
          width="48"
          height="48"
          alt=""
        /></a
      >

      <a href="https://instagram.com/leadandfollowindia">
        <img
          width="48"
          height="48"
          src="https://img.icons8.com/color/48/instagram-new--v1.png"
          alt="instagram-new--v1"
        />
      </a>
    </div>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3505.0846453113795!2d77.21308232540835!3d28.537175388404762!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390ce38dcbc779cd%3A0xce03a156e81abaf7!2sLead%20and%20Follow%20India%202.0%20Dance%20School!5e0!3m2!1sen!2sin!4v1765357859974!5m2!1sen!2sin"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>

    <form netlify>
      <h4>Have more questions?</h4>
      <select>
        <option value="">How can we help you?</option>
        <option value="Studio Rent">Rent out studio</option>
        <option value="Join Class">Join one of our dance classes</option>
        <option value="Tattoo">Tattoo Consultation</option>
        <option value="Join our team"
          >Contact us if you want to be part of our team</option
        >
      </select>
      <textarea rows="10" placeholder="Your message..."></textarea>
      <button type="submit">Send Message</button>
    </form>
  </main>
</BaseLayout>
